@model Northwind.Store.Model.Region

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

@{
    if (ViewBag.Message != null)
    {
        <div class="alert alert-danger" role="alert">
            <p>
                <strong>@ViewBag.Message.Title</strong>
                @ViewBag.Message.Description
            </p>
        </div>

        <script>
            toastr["warning"]("@ViewBag.Message.Description.Substring(0, 50)",
                "@ViewBag.Message.Title")
        </script>
    }
}
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Region</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.RegionDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.RegionDescription)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.RowVersion)
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
